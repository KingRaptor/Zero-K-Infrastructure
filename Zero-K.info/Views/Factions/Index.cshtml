@using ZkData
@model dynamic

@{
    Page.Title = "Factions";
    var db = new ZkDataContext();
}
<h3>Read more about <a href="/Wiki/PlanetWarsFactions">history of factions</a></h3>
<br/>
@foreach (var f in db.Factions.Where(x => !x.IsDeleted))
{
    <span>
        @Html.Partial("~/Views/Factions/FactionBox.cshtml", f)
    </span>
    @Html.IncludeWiki("Faction" + f.Shortcut)
    <div style="clear:both"></div>
    <br />   
}


